---
import Layout from '@layouts/Layout.astro'
import Button from '@components/Button.astro'
---

<Layout title='404: Equipo no encontrado'>
	<main class='grid place-content-center h-screen px-8 py-4'>
		<section class='flex justify-center items-center flex-col gap-8 overflow-hidden'>
			<div>
				<h1
					class='absolute left-4 sm:right-0 sm:top-50 md:text-[320px] md:right-2 lg:bottom-60 lg:right-4 lg:text-[384px] -z-10 uppercase text-center font-bold text-[192px] text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 to-blue-500'
				>
					404
				</h1>
				<div class='flex items-center flex-col'>
					<picture>
						<img
							loading='lazy'
							class='z-10 w-60 h-auto m-auto md:w-full'
							src='/assets/404.svg'
							alt='404 Not Found'
						/>
					</picture>
					<p
						class='text-center uppercase m-auto text-clip text-4xl lg:text-8xl p-y8 px-4 font-bold'
					>
						Vaya!
						<p
							class='text-center uppercase m-auto text-clip text-2xl lg:text-4xl p-y8 px-4 font-bold'
						>
							Esta pagina no existe.
						</p>
					</p>
				</div>
			</div>
			<div class='flex justify-center items-center'>
				<Button
					className='text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800'
					href='/'
				>
					Volver a inicio
				</Button>
			</div>
		</section>
	</main>
</Layout>
