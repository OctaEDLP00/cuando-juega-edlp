---
import Cards from '~/components/Cards.astro'
import Footer from '~/components/Footer.astro'
import Navbar from '~/components/Navbar.astro'
import { partidos } from '~/const/partidos.ts'
import Layout from '~/layouts/Layout.astro'
---

<Layout title='Cuando juega EDLP'>
	<Navbar />
	<main class='flex justify-center p-4 mx-auto'>
		<Cards partidos={partidos} />
		{partidos.length === 0 && (<div><span>Vuelve el proximo torneo/temporada</span></div>)}
	</main>
	<Footer />
</Layout>
