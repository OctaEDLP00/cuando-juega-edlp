{
	"printWidth": 100,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"tabWidth": 2,
	"trailingComma": "es5",
	"useTabs": false,
	"plugins": [
		"prettier-plugin-astro",
		"prettier-plugin-tailwindcss"
	],
	"tailwindStylesheet": "./src/styles/globals.css",
	"overrides": [
		{
			"files": [
				"*.json",
				"*.md",
				"*.toml",
				"*.yml"
			],
			"options": {
				"useTabs": false
			}
		},
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	],
	"endOfLine": "lf"
}