{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
		"allowJs": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "react-jsx",
		"jsxImportSource": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./dist",
    "paths": {
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@const/*": [
        "src/const/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "target": "ESNext",
    "types": [
			"astro/client",
			"vite/client",
      "react"
    ]
  }
}
